    <div class="hero">
        <div class="container-fluid container-xxl px-4 pt-5 px-md-5 pt-md-5">
            <p class="eyebrows text-center">
                <a href="{{ url('app_icons') }}">UX Icons</a> /
                <a href="{{ url('app_icon_sets') }}">Icon Sets</a>
            </p>
            <h1 class="text-center ubuntu mt-3">
                <a href="{{ url('app_icon_collection', {prefix: prefix}) }}">
                    {{ iconSet.name }}{{ 'icon' not in iconSet.name|lower ? ' Icons' }}
                </a>
            </h1>
            <div style="font-size: 1rem; line-height: 1.75rem;" class="mt-4 text-center">
                <p>
                    {% if iconSet.total|default %}
                        <span>
                            <span>Icons</span>
                            <code>
                                {{ iconSet.total }}
                            </code>
                        </span>
                    {% endif %}
                    {% if categories|default %}
                        <span>・</span>
                        <span>
                            <span>Categories</span>
                            <code>
                                {{ categories|length }}
                            </code>
                        </span>
                    {% endif %}
                    {% if collection.version|default %}
                        <span>・</span>
                        <span>
                            <span>Version</span>
                            <code>
                                {{ collection.version }}
                            </code>
                        </span>
                    {% endif %}
                    {% if iconSet.license.url|default %}
                        <span>・</span>
                        <span>
                            <span>License</span>
                            <code>
                                <a href="{{ iconSet.license.url }}" rel="external nofollow">
                                    {{ iconSet.license.title }}
                                </a>
                            </code>
                        </span>
                    {% endif %}
                    {% if iconSet.author.url|default %}
                        <span>・</span>
                        <span>
                            <span>Authors</span>
                            <code>
                                <a href="{{ iconSet.author.url }}" rel="external nofollow">
                                    {{ iconSet.author.name }}
                                </a>
                            </code>
                        </span>
                    {% endif %}
                </p>
            </div>
        </div>
    </div>

    <div class="container-fluid container-xxl px-4 pt-4 px-md-5 pt-md-5">
        <div class="d-flex flex-wrap">
        {% for category, count in categories %}
            <button class="btn btn-outline-primary btn-sm me-2 mb-2" type="button">
                <a href="{{ url('app_icon_collection', {prefix: prefix, category: category}) }}">
                    <span class="">{{ category }}</span>

                    <span>{{ count }}</span>
                </a>
            </button>
        {% endfor %}
            </div>
    </div>

    <div class="container-fluid container-xxl px-4 px-md-5">
        <twig:Icon:IconSearch
            :set="prefix"
            hideSelect
        />
    </div>

{% endblock %}


{% block aside %}
    <aside style="background-color: var(--bs-secondary-bg-subtle);" class="mt-5">
        <twig:Icon:PrevNextIconSet iconSet="{{ iconSet }}" />
    </aside>
{% endblock %}


