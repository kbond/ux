<article class="IconSetCard" data-iconset="{{ iconSet.identifier }}" style="--index: {{ index }};">

    <div class="IconSetCard__media" style="aspect-ratio: 5/{{ samples / 5 }};">
        <div class="IconSetCard__icons">
            {% for icon in this.sampleIcons() %}
                <div class="IconSetCard__icon">
                    <img src="https://api.iconify.design/{{ iconSet.identifier }}/{{ icon }}.svg"
                         alt="{{ icon }}"
                         width="24" height="24"
                         loading="lazy"
                    />
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="IconSetCard__content">
        <h3 class="IconSetCard__title">
            <button type="button" class="IconCard__copy">
                <twig:Icon name="copy" />
            </button>
            <a class="stretched-link" href="{{ path('app_icon_set', {prefix: iconSet.identifier}) }}">
                {{ iconSet.name }}
            </a>
        </h3>
        <span class="IconSetCard__total">
            <em>{{ iconSet.total|number_format }}</em>
            <span>icons</span>
        </span>
    </div>

</article>
